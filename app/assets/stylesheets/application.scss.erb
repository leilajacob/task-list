@import "bootstrap-sprockets";
@import "bootstrap";
@import "bootstrap-datetimepicker";

body {
  height: 100%;
  background: url(<%= asset_path "notebook.jpg" %>) no-repeat center center fixed;
  background-size: cover;
}

a {
	text-decoration: none;
	color: white;
	font-family: 'Playfair Display', serif;
}

a:hover {
	background: none;
	text-decoration: line-through;
	color: #336699;
	font-family: 'Playfair Display', serif;
}

h2 {
	color: white;
	font-family: 'Playfair Display', serif;
}

.well {
	background: rgba(0,0,0,0.4);
}

p {
	color: white;
}

button {
	position: relative;
	margin-bottom: 20px;
	overflow:hidden;
}
